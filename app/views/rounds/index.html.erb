 <div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Rounds</h1>

  <table class="table table-bordered" id="table_rounds">
    <thead>
      <tr>
        <th>Date</th>
        <th>Number</th>
        <th>Tournament</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @rounds.each do |round| %>
        <tr>
          <td><%= round.date %></td>
          <td><%= round.number %></td>
          <td><%= round.tournament_id %></td>
          <td><%= link_to 'Show', round %></td>
          <td><%= link_to 'Edit', edit_round_path(round) %></td>
          <td><%= link_to 'Destroy', round, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Round', new_round_path %>
</div>