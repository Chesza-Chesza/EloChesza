<div class="container"> 
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Date:</strong>
    <%= @round.date %>
  </p>

  <p>
    <strong>Number:</strong>
    <%= @round.number %>
  </p>

  <p>
    <strong>Tournament:</strong>
    <%= @round.tournament_id %>
  </p>

  <%= link_to 'Edit', edit_tournament_round_path(@round) %> |
  <%= link_to 'Back', tournaments_path(@round.tournament) %>

  <div class="py-3">
    <%= link_to 'New games', round_games_path(@round), class: 'btn btn-dark rounded my-4' %>
  </div>

  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <h3>Games</h3>
    <thead>
        <tr>
          <th>Player1</th>
          <th>Player2</th>
          <th>Result</th>
          <th>Winner</th>
          <th>Round</th>
          <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
      <%= render @round.games %>
    </tbody>
  </table>
  <%= link_to 'New', new_round_game_path(@round) %>
</div>
