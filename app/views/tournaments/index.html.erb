<p id="notice"><%= notice %></p>

<h1>Tournaments</h1>

<table>
  <thead>
    <tr>
      <th>Event code</th>
      <th>Name</th>
      <th>City</th>
      <th>Country</th>
      <th>Players quantity</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Total rounds</th>
      <th>System</th>
      <th>Time control</th>
      <th>Referee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tournaments.each do |tournament| %>
      <tr>
        <td><%= tournament.event_code %></td>
        <td><%= tournament.name %></td>
        <td><%= tournament.city %></td>
        <td><%= tournament.country %></td>
        <td><%= tournament.players_quantity %></td>
        <td><%= tournament.start_date %></td>
        <td><%= tournament.end_date %></td>
        <td><%= tournament.total_rounds %></td>
        <td><%= tournament.system %></td>
        <td><%= tournament.time_control %></td>
        <td><%= tournament.referee_id %></td>
        <td><%= link_to 'Show', tournament %></td>
        <td><%= link_to 'Edit', edit_tournament_path(tournament) %></td>
        <td><%= link_to 'Destroy', tournament, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

