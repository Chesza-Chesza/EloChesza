<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Players</h1>

  <table class="table table-bordered" id="table_players">
    <thead>
      <tr>
        <th>Fide number</th>
        <th>Title</th>
        <th>Name</th>
        <th>Last name</th>
        <th>Fed</th>
        <th>Gender</th>
        <th>B day</th>
        <th>Ranked player</th>
        <th>Elo</th>
        <th>Ranked opponents</th>
        <th>K value</th>
        <th>Last elo update</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @players.each do |player| %>
        <tr>
          <td><%= player.fide_number %></td>
          <td><%= player.title %></td>
          <td><%= player.name %></td>
          <td><%= player.last_name %></td>
          <td><%= player.fed %></td>
          <td><%= player.gender %></td>
          <td><%= player.b_day %></td>
          <td><%= player.ranked_player %></td>
          <td><%= player.elo %></td>
          <td><%= player.ranked_opponents %></td>
          <td><%= player.k_value %></td>
          <td><%= player.last_elo_update %></td>
          <td><%= link_to 'Show', player %></td>
          <td><%= link_to 'Edit', edit_player_path(player) %></td>
          <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Player', new_player_path %>
</div>