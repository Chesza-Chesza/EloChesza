<div class="container">
  <p id="notice"><%= notice %></p>
  
  <h1>Homes</h1>

  <div class="m-4">
      <%= render 'form', home: @home %>
  </div>
  
  <table>
    <thead>
      <tr>
        <th>Index</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @homes.each do |home| %>
        <tr>
          <td><%= home.index %></td>
          <td><%= link_to 'Show', home %></td>
          <td><%= link_to 'Edit', edit_home_path(home) %></td>
          <td><%= link_to 'Destroy', home, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Home', new_home_path %>
</div>