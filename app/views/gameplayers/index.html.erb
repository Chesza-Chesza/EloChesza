<div class="container">
  <p id="notice"><%= notice %></p>
  
  <h1>Gameplayers</h1>
  
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead class="thead-dark">
        <tr>
          <th>Game</th>
          <th>Player</th>
          <th>Rtng change</th>
          <th colspan="3"></th>
        </tr>
      </thead>
  
      <tbody>
        <% @gameplayers.each do |gameplayer| %>
          <tr>
            <td><%= gameplayer.game_id %></td>
            <td><%= gameplayer.player.full_name %></td>
            <td><%= gameplayer.rtng_change %> / Final Result:<%= gameplayer.player.tournament_rtng(gameplayer.game.round.tournament_id).round%></td>
            <td><%= link_to 'Show', gameplayer %></td>
            <td><%= link_to 'Edit', edit_gameplayer_path(gameplayer) %></td>
            <td><%= link_to 'Destroy', gameplayer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  
    <%= link_to 'New Gameplayer', new_gameplayer_path, class: 'btn btn-dark rounded mb-4' %>
  </div>
</div>
<div class="bloque"></div>
