<div class="container">
  <%= form_with(model: gameplayer, class: "form-group mb-4") do |form| %>
    <% if gameplayer.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(gameplayer.errors.count, "error") %> prohibited this gameplayer from being saved:</h2>

        <ul>
          <% gameplayer.errors.each do |error| %>
