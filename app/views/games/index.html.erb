<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Games</h1>
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead class="thead-dark">
        <tr>
          <th>Player1</th>
          <th>Player2</th>
          <th>Result</th>
          <th>Won</th>
          <th>Round</th>
          <th colspan="3"></th>
        </tr>
      </thead>  

    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= game.player1_id %></td>
          <td><%= game.player2_id %></td>
          <td><%= game.result %></td>
          <td><%= game.won %></td>
          <td><%= game.round_id %></td>
          <td><%= link_to 'Show', round_game_path(game, @round) %></td>
          <td><%= link_to 'Edit', edit_round_game_path(game, @round) %></td>
          <td><%= link_to 'Destroy', @game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>  

  <br>
    <div clas="container">
      <%= link_to 'New Game', new_round_game_path %>
    </div>
  </div>
</div>
