html,
body {
    margin: -10px auto;
    padding: 0;
    background-color: #FEBA01;
}

body {
  background-image: url('<%= asset_path "bg"%>');
  background-repeat: no-repeat;
  background-size: cover;
  height: 1000px;
}

.index_home {
  margin: 0 auto;
}
.calculator {
  max-width: 500px;
  margin: 0 auto;
  border-style: solid;
  border-width: 2px;
  border-radius: 8.5px;
  border-color: white;
}

.calculator .field{
  padding: 7px;
}

.body_container{
    margin: 0 auto;
}

.notes {
  max-width: 500px; 
  background-color: rgba(10, 10, 10, 0.05);
  border-radius: 8.5px;
  padding: 20px;
  }

.bloque {
  height:302px;
  margin: 0;
}
.bloque-500 {
  height:400px;
}

footer{
  width: 100%;
  padding-bottom: 0;
  left: 0;
  position: relative;
}

.nav-background{
    background-color: rgba(10, 10, 10, 0.1);
}